<h1 class="mt-3">Atividades Complementares</h1>

<div class="card">
  <div class="card-header d-flex justify-content-between">
    <h4>Minhas Solicitações</h4>
    <%= link_to 'Nova AC', ac_new_path, class: 'btn btn-success' %>
  </div>
  <div class="card-body">
    <div class="input-group mb-3 w-50 ml-auto">
      <input type="text" class="form-control" aria-label="Pesquisar"
             aria-describedby="basic-addon2">
      <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button">Pesquisar</button>
      </div>
    </div>

    <table class="table table-bordered">
      <thead>
      <tr>
        <th scope="col">
          <div class="d-flex">
              <span class="d-flex flex-column justify-content-center">
                Atividade Complementar
              </span>
            <div class="ml-2 d-flex flex-column">
              <i class="fa fa-angle-up" aria-hidden="true"></i>
              <i class="fa fa-angle-down" aria-hidden="true"></i>
            </div>
          </div>
        </th>
        <th scope="col">
          <div class="d-flex">
              <span class="d-flex flex-column justify-content-center">
                Status
              </span>
            <div class="ml-2 d-flex flex-column">
              <i class="fa fa-angle-up" aria-hidden="true"></i>
              <i class="fa fa-angle-down" aria-hidden="true"></i>
            </div>
          </div>
        </th>
        <th scope="col">
          <div class="d-flex">
              <span class="d-flex flex-column justify-content-center">
                CH Solicitada
              </span>
            <div class="ml-2 d-flex flex-column">
              <i class="fa fa-angle-up" aria-hidden="true"></i>
              <i class="fa fa-angle-down" aria-hidden="true"></i>
            </div>
          </div>
        </th>
        <th scope="col">
          <div class="d-flex">
              <span class="d-flex flex-column justify-content-center">
                CH Aprovada
              </span>
            <div class="ml-2 d-flex flex-column">
              <i class="fa fa-angle-up" aria-hidden="true"></i>
              <i class="fa fa-angle-down" aria-hidden="true"></i>
            </div>
          </div>
        </th>
        <th scope="col">
          <div class="d-flex">
              <span class="d-flex flex-column justify-content-center">
                Data Aprov.
              </span>
            <div class="ml-2 d-flex flex-column">
              <i class="fa fa-angle-up" aria-hidden="true"></i>
              <i class="fa fa-angle-down" aria-hidden="true"></i>
            </div>
          </div>
        </th>
        <th scope="col">Ações</th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <td class="align-middle">Estágio</td>
        <td class="align-middle text-success">Aprovada</td>
        <td class="align-middle">300</td>
        <td class="align-middle">300</td>
        <td class="align-middle">10/10/2016</td>
        <td>
          <div class="d-flex flex-column align-items-center">
            <%= link_to ac_show_path, class: 'btn btn-primary w-90' do %>
              <i class="fa fa-info-circle fa-lg" aria-hidden="true"
                 data-toggle="tooltip" data-placement="top" title="Detalhes"></i>
              Detalhes
            <% end %>
          </div>
        </td>
      </tr>
      <tr>
        <td class="align-middle">Simpósio</td>
        <td class="text-warning align-middle">Pendente</td>
        <td class="align-middle">20</td>
        <td class="align-middle">--</td>
        <td class="align-middle">--</td>
        <td>
          <div class="d-flex flex-column align-items-center">
            <%= link_to ac_show_path, class: 'btn btn-primary w-90' do %>
              <i class="fa fa-info-circle fa-lg" aria-hidden="true"
                 data-toggle="tooltip" data-placement="top" title="Detalhes"></i>
              Detalhes
            <% end %>
            <a href="#" class="btn btn-info mt-2 w-90">
              <i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"
                 data-toggle="tooltip" data-placement="top" title="Editar"></i>
              Editar
            </a>
            <a href="#" class="btn btn-danger mt-2 w-90">
              <i class="fa fa-trash fa-lg" aria-hidden="true"></i>
              Excluir
            </a>
          </div>
        </td>
      </tr>
      </tbody>
    </table>
  </div>
</div>
