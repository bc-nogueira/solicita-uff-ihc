<h1 class="my-3">Bem-vindo ao Solicita UFF!</h1>

<div class="card">
  <div class="card-header">
    <h4>Resumo de suas solicitações</h4>
  </div>
  <div class="card-body">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Tipo de Solicitação</th>
          <th scope="col" class="table-warning">Pendentes</th>
          <th scope="col" class="table-danger">Reprovadas</th>
          <th scope="col" class="table-success">Aprovadas</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <%= link_to 'Inscrição em Disciplina', inscricao_index_path %>
          </td>
          <td class="table-warning">1</td>
          <td class="table-danger">1</td>
          <td class="table-success">2</td>
        </tr>
        <tr>
          <td>
            <%= link_to 'Troca de Turma', troca_turma_index_path %>
          </td>
          <td class="table-warning">1</td>
          <td class="table-danger">---</td>
          <td class="table-success">2</td>
        </tr>
        <tr>
          <td>
            <%= link_to 'Cancelamento de Turma', cancelamento_turma_index_path %>
          </td>
          <td class="table-warning">1</td>
          <td class="table-danger">1</td>
          <td class="table-success">2</td>
        </tr>
        <tr>
          <td>
            <%= link_to 'Aproveitamento de Disciplina', aproveitamento_index_path %>
          </td>
          <td class="table-warning">1</td>
          <td class="table-danger">1</td>
          <td class="table-success">2</td>
        </tr>
        <tr>
          <td>
            <%= link_to 'Atividade Complementar', ac_index_path %>
          </td>
          <td class="table-warning">1</td>
          <td class="table-danger">1</td>
          <td class="table-success">2</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
