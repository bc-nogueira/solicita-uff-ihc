<%= render 'troca_turma/confirm_modal' %>

<h1 class="mt-3">Nova Troca de Turma</h1>

<div class="alert alert-danger">
  A criação da solicitação falhou.
</div>

<div class="card">
  <div class="card-header">
    <h4>Preencha o formulário</h4>
  </div>
  <form onsubmit="return false;">
    <div class="card-body">
      <div class="form-row">
        <div class="form-group col-lg-8">
          <label for="turmaAtualTroca">Turma Atual</label>
          <select class="form-control" id="turmaAtualTroca" required>
            <option>Selecione a turma</option>
            <option>IHC - A1</option>
            <option>Qualidade e Teste - B1</option>
          </select>
        </div>
        <div class="form-group col-lg-4">
          <label for="novaTurmaTroca">Nova Turma</label>
          <select class="form-control" id="novaTurmaTroca" required>
            <option>Selecione a turma</option>
            <option>B1</option>
            <option>C1</option>
          </select>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <button type="submit" class="btn btn-success"
              data-toggle="modal" data-target="#confirmModalTrocaTurma">
        Solicitar
      </button>
      <%= link_to 'Voltar', :back, class: 'btn btn-secondary' %>
    </div>
  </form>
</div>
