<h1 class="mt-3">Inscrição em Disciplinas</h1>

<div class="card">
  <div class="card-header d-flex justify-content-between">
    <h4>Minhas Solicitações</h4>
    <%= link_to 'Nova Inscrição', inscricao_new_path, class: 'btn btn-success' %>
  </div>
  <div class="card-body">
    <div class="input-group mb-3 w-50 ml-auto">
      <input type="text" class="form-control" aria-label="Pesquisar"
             aria-describedby="basic-addon2">
      <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button">Pesquisar</button>
      </div>
    </div>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col" class="col-6">
            <div class="d-flex">
              <span class="d-flex flex-column justify-content-center">
                Disciplina
              </span>
              <div class="ml-2 d-flex flex-column">
                <i class="fa fa-angle-up" aria-hidden="true"></i>
                <i class="fa fa-angle-down" aria-hidden="true"></i>
              </div>
            </div>
          </th>
          <th scope="col" class="col-1">
            <div class="d-flex">
              <span class="d-flex flex-column justify-content-center">
                Turma
              </span>
              <div class="ml-2 d-flex flex-column">
                <i class="fa fa-angle-up" aria-hidden="true"></i>
                <i class="fa fa-angle-down" aria-hidden="true"></i>
              </div>
            </div>
          </th>
          <th scope="col" class="col-1">
            <div class="d-flex">
              <span class="d-flex flex-column justify-content-center">
                Período
              </span>
              <div class="ml-2 d-flex flex-column">
                <i class="fa fa-angle-up" aria-hidden="true"></i>
                <i class="fa fa-angle-down" aria-hidden="true"></i>
              </div>
            </div>
          </th>
          <th scope="col" class="col-1">
            <div class="d-flex">
              <span class="d-flex flex-column justify-content-center">
                Status
              </span>
            <div class="ml-2 d-flex flex-column">
              <i class="fa fa-angle-up" aria-hidden="true"></i>
              <i class="fa fa-angle-down" aria-hidden="true"></i>
            </div>
          </div>
          </th>
          <th scope="col" class="col-3">Ações</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="align-middle">Programação I</td>
          <td class="align-middle">A1</td>
          <td class="align-middle">2017.2</td>
          <td class="align-middle text-success">Aprovado</td>
          <td>
            <div class="d-flex flex-column align-items-center">
              <%= link_to inscricao_show_path, class: 'btn btn-primary w-100' do %>
                <i class="fa fa-info-circle fa-lg" aria-hidden="true"
                   data-toggle="tooltip" data-placement="top" title="Detalhes"></i>
                Detalhes
              <% end %>
            </div>
          </td>
        </tr>
        <tr>
          <td class="align-middle">Programação II</td>
          <td class="align-middle">B1</td>
          <td class="align-middle">2018.1</td>
          <td class="align-middle text-danger">Reprovado</td>
          <td>
            <div class="d-flex flex-column align-items-center">
              <%= link_to inscricao_show_path, class: 'btn btn-primary w-100' do %>
                <i class="fa fa-info-circle fa-lg" aria-hidden="true"
                   data-toggle="tooltip" data-placement="top" title="Detalhes"></i>
                Detalhes
              <% end %>
            </div>
          </td>
        </tr>
        <tr>
          <td class="align-middle">Redes I</td>
          <td class="align-middle">C1</td>
          <td class="align-middle">2018.2</td>
          <td class="align-middle text-warning">Pendente</td>
          <td>
            <%= link_to inscricao_show_path, class: 'btn btn-primary w-100' do %>
              <i class="fa fa-info-circle fa-lg" aria-hidden="true"
                   data-toggle="tooltip" data-placement="top" title="Detalhes"></i>
              Detalhes 
            <% end %>
            <a href="#" class="btn btn-danger w-100 mt-2">
              <i class="fa fa-ban fa-lg" aria-hidden="true"
                data-toggle="tooltip" data-placement="top" title="Cancelar"></i>
              Cancelar
            </a>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
